    <!-- END HEADER -->

        <!-- BODY -->
        <main class="container">
            <div class="bg-light p-5 rounded">
                <div class="col-12"><h1>Carga de Trayecto</h1></div>
            </div>

            <div class="bg-light p-5 rounded">
                <div class="col-12"><h3>Rellene el formulario</h3></div>
            </div>

            <!-- FORM -->
            <form class="bg-light p-5 rounded" action="/trayecto" method="post">
                <fieldset class="form-group">

                    <!-- TRAYECTO COMPARTIDO -->
                    <div class="row">
                        <legend class="col-form-label col-12 pt-0">Elija los integrantes del trayecto</legend>
                        <div class="form-group col-3">
                            <label for="miembro_1">Integrante 1</label>
                            <select name=miembro_1 id="miembro_1" class="form-control">
                                <option value="null">Choose...</option>
                                {{#each miembros}}
                                <option value="{{id}}">{{apellido}}, {{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-3">
                            <label for="miembro_2">Integrante 2</label>
                            <select name=miembro_2 id="miembro_2" class="form-control">
                                <option value="null">Choose...</option>
                                {{#each miembros}}
                                <option value="{{id}}">{{apellido}}, {{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-3">
                            <label for="miembro_3">Integrante 3</label>
                            <select name=miembro_3 id="miembro_3" class="form-control">
                                <option value="null">Choose...</option>
                                {{#each miembros}}
                                <option value="{{id}}">{{apellido}}, {{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group col-3">
                            <label for="miembro_4">Integrante 4</label>
                            <select name=miembro_4 id="miembro_4" class="form-control">
                                <option value="null">Choose...</option>
                                {{#each miembros}}
                                    <option value="{{id}}">{{apellido}}, {{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>

                    <!-- TRAMOS -->

                    <div class="bg-light p-5 rounded">
                        <div class="col-4"><h5>Tramos:</h5></div>
                        <div class="col-8"><h6>Ingresar puntos como grados decimales (Ejemplo: "15.4,14.5")</h6></div>
                    </div>

                    <div class="row">
                        <div class="form-group col-3">
                            <label for="cant">Cantidad realizada por mes</label>
                            <input name="cant" class="form-control" id="cant">
                        </div>

                        <div class="form-group col-3">

                            <label for="transporte_1">Medio Transporte</label>
                            <select name="transporte_1" id="transporte_1" class="form-control">
                                <option value="null">Choose...</option>
                                {{#each medio_transportes}}
                                <option value="{{id}}">{{nombre}}</option>
                                {{/each}}
                            </select>

                        </div>
                        <div class="form-group col-3">
                            <label for="punto_inicio_1">Punto Inicio Tramo</label>
                            <input name="punto_inicio_1" class="form-control" id="punto_inicio_1">
                        </div>
                        <div class="form-group col-3">
                            <label for="punto_fin_1">Punto Fin Tramo</label>
                            <input name="punto_fin_1" class="form-control" id="punto_fin_1">
                        </div>

                    </div>
                    <br>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="form-group col-3">

                            <label for="transporte_2">Medio Transporte</label>
                            <select name="transporte_2" id="transporte_2" class="form-control">
                                <option value="null">Choose...</option>
                                {{#each medio_transportes}}
                                <option value="{{id}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group col-3">
                            <label for="punto_inicio_2">Punto Inicio Tramo</label>
                            <input name="punto_inicio_2" class="form-control" id="punto_inicio_2">
                        </div>
                        <div class="form-group col-3">
                            <label for="punto_fin_2">Punto Fin Tramo</label>
                            <input name="punto_fin_2" class="form-control" id="punto_fin_2">
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="form-group col-3">

                            <label for="transporte_3">Medio Transporte</label>
                            <select name="transporte_3" id="transporte_3" class="form-control">
                                <option value="null">Choose...</option>
                                {{#each medio_transportes}}
                                <option value="{{id}}">{{nombre}}</option>
                                {{/each}}
                            </select>

                        </div>
                        <div class="form-group col-3">
                            <label for="punto_inicio_3">Punto Inicio Tramo</label>
                            <input name="punto_inicio_3" class="form-control" id="punto_inicio_3">
                        </div>
                        <div class="form-group col-3">
                            <label for="punto_fin_3">Punto Fin Tramo</label>
                            <input name="punto_fin_3" class="form-control" id="punto_fin_3">
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-9"></div>
                        <div class="col-3">
                            <button id="singlebutton" name="singlebutton" class="btn btn-primary" type="submit">Enviar</button>
                        </div>
                    </div>

                </fieldset>
            </form>
            <!-- END FORM -->

        </main>

            <script type="text/javascript" src="https://code.jquery.com/jquery-latest.min.js"></script>

            <script>

                function checkbox_enabled() {

                  var checkBox = document.getElementById("compartido");

                  if (checkBox.checked == true){
                  document.getElementById("miembro_1").disabled = false;
                  document.getElementById("miembro_2").disabled = false;
                  document.getElementById("miembro_3").disabled = false;
                  document.getElementById("compartido").value = "true";
                  } else {
                  document.getElementById("miembro_1").disabled = true;
                  document.getElementById("miembro_2").disabled = true;
                  document.getElementById("miembro_3").disabled = true;
                  document.getElementById("compartido").value = "false";
                  }
                }

            </script>

    </body>
</html>